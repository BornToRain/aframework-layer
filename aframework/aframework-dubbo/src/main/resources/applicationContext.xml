    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="aframework-dubbo"/>

    <dubbo:registry address="multicast://224.5.6.7:1234"/>
    <dubbo:protocol name="dubbo" port="20880"/>

    <!-- 使用zookeeper广播注册中心暴露服务地址 -->
<!--    <dubbo:registry  protocol="zookeeper"  address="192.168.0.118:2181,192.168.0.120:2181,192.168.0.121:2181"  />-->

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.dubbo.interfaces.IAfUserService" ref="afUserService"  loadbalance="roundrobin"/>
    <!-- 和本地bean一样实现服务 -->
    <bean id="afUserService" class="com.dubbo.implementes.AfUserService"/>

</beans>