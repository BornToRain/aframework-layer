<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.alvis</groupId>
    <artifactId>aframework</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>
    <description>aframework</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.version>4.12</junit.version>
        <spring-restdoc.version>1.2.1.RELEASE</spring-restdoc.version>

        <mybatis.version>3.4.0</mybatis.version>
        <mybatis-spring.version>1.3.1</mybatis-spring.version>
        <postgresql.version>42.2.1</postgresql.version>
        <sharding-jdbc.version>1.5.1</sharding-jdbc.version>
        <thymeleaf.version>3.0.9.RELEASE</thymeleaf.version>
        <springframework.version>4.3.10.RELEASE</springframework.version>
        <springframework.security.version>4.2.4.RELEASE</springframework.security.version>
        <springframework-redis.version>1.8.4.RELEASE</springframework-redis.version>
        <redis-clients.version>2.9.0</redis-clients.version>
        <jackson.version>2.8.9</jackson.version>

        <druid.version>1.1.2</druid.version>
        <slf4j.version>1.7.7</slf4j.version>


        <maven-jar-plugin.version>3.0.2</maven-jar-plugin.version>
        <maven-assembly-plugin.version>3.1.0</maven-assembly-plugin.version>

        <!-- aframework -->
        <aframework-core.version>1.0.0</aframework-core.version>
        <aframework-domain.version>1.0.0</aframework-domain.version>
        <aframework-data.version>1.0.0</aframework-data.version>
        <aframework-service.version>1.0.0</aframework-service.version>
        <aframework-configure.version>1.0.0</aframework-configure.version>
        <aframework-web.version>1.0.1</aframework-web.version>
        <aframework-admin.version>1.0.1</aframework-admin.version>
        <aframework-api.version>1.0.1</aframework-api.version>

        <!-- tools -->
        <commons-io.version>2.5</commons-io.version>
        <commons-lang3.version>3.6</commons-lang3.version>

        <!-- environment setting -->
        <jdk.version>1.8</jdk.version>
    </properties>

    <profiles>
        <profile>
            <id>development</id>
            <properties>
                <profiles.active>development</profiles.active>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <profiles.active>test</profiles.active>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <profiles.active>production</profiles.active>
            </properties>
        </profile>
    </profiles>

    <!-- 阿里云maven仓库 -->
    <repositories>
        <repository>
            <id>public</id>
            <name>aliyun nexus</name>
            <url>http://maven.aliyun.com/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>public</id>
            <name>aliyun nexus</name>
            <url>http://maven.aliyun.com/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <modules>
        <module>aframework-core</module>
        <module>aframework-domain</module>
        <module>aframework-data</module>
        <module>aframework-service</module>
        <module>aframework-configure</module>
        <module>aframework-api</module>
        <module>aframework-web</module>
        <module>aframework-admin</module>
        <module>all</module>
        <module>aframework-dubbo</module>
    </modules>

    <dependencyManagement>
        <dependencies>

            <!--spring unit  -->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-test</artifactId>
                <version>${springframework.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.springframework.restdocs</groupId>
                <artifactId>spring-restdocs-mockmvc</artifactId>
                <version>${spring-restdoc.version}</version>
